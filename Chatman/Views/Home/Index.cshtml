                        $(this).replaceWith('<button class="pending-btn" disabled>等待確認</button>');
                    }
                } catch (error) {
                    console.error('發送好友請求失敗:', error);
                }
            });
        }

        // 初始化通知功能
        function initializeNotifications() {
            // 標記全部已讀按鈕點擊事件
            $('.mark-all-read').click(function (e) {
                e.stopPropagation();
                markAllNotificationsAsRead();
