        // 載入未讀通知
        async function loadUnreadNotifications() {
            try {
                const response = await $.ajax({
                    url: '../api/user/getUnreadNotifications',
                    type: 'GET'
                });

                if (response.success) {
                    response.data.forEach(notification => {
                        addNotificationToMenu(notification);
